<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/muave_background"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/hello_world_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world_string"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />

    <Button
        android:id="@+id/about_button_id"
        android:layout_width="391dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/muave_background"
        android:fontFamily="serif"
        android:text="@string/about_button_string"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.848" />

    <Button
        android:id="@+id/link_collector_button_id"
        android:layout_width="124dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/muave_background"
        android:text="@string/link_collector_button_string"
        app:layout_constraintEnd_toStartOf="@+id/clicky_button_id"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="106dp" />

    <Button
        android:id="@+id/clicky_button_id"
        android:layout_width="124dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/muave_background"
        android:text="@string/clicky_button_string"
        app:layout_constraintEnd_toStartOf="@+id/locator_button_id"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/link_collector_button_id"
        tools:layout_editor_absoluteY="106dp" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="about_button_id" />

    <Button
        android:id="@+id/locator_button_id"
        android:layout_width="124dp"
        android:layout_height="100"
        android:backgroundTint="@color/muave_background"
        android:text="@string/locator_button_string"
        app:layout_constraintEnd_toStartOf="@+id/ays_button_id"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/clicky_button_id"
        tools:layout_editor_absoluteY="106dp" />

    <Button
        android:id="@+id/ays_button_id"
        android:layout_width="124dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/muave_contrast_green"
        android:fontFamily="serif"
        android:text="@string/ays_button_string"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/locator_button_id"
        tools:layout_editor_absoluteY="106dp" />

</androidx.constraintlayout.widget.ConstraintLayout>